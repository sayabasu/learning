# Copy this file to .env and adjust values as needed before running Docker Compose.

# Port exposed on the host machine for the frontend container.
FRONTEND_PORT=8080

# Port exposed on the host machine for the backend container.
BACKEND_PORT=8000

# Database connection string for the FastAPI backend.
DATABASE_URL=sqlite:///data/udoy.db

# Security and authentication settings.
SECRET_KEY=change-me
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Default administrator credentials seeded on startup.
INITIAL_ADMIN_EMAIL=admin@udoy.local
INITIAL_ADMIN_PASSWORD=admin123

# Base URL for the Udoy API used by the frontend at build time.
VITE_API_BASE_URL=http://backend:8000
